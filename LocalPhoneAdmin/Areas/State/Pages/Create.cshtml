@page
@model LocalPhoneAdmin.Areas.State.CreateModel

@using Microsoft.AspNetCore.Identity
@using LocalPhoneDomain.Areas.Identity.Data

@inject SignInManager<UserModel> SignInManager
@inject UserManager<UserModel> UserManager

@if (SignInManager.IsSignedIn(User))
{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StateModel.Name" class="control-label"></label>
                    <input asp-for="StateModel.Name" class="form-control" />
                    <span asp-validation-for="StateModel.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StateModel.Abbreviation" class="control-label"></label>
                    <input asp-for="StateModel.Abbreviation" class="form-control" />
                    <span asp-validation-for="StateModel.Abbreviation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StateModel.Country" class="control-label"></label>

                    <select asp-for="StateModel.IdCountry" class="form-control"
                            asp-items="@Model.SelectList">
                        <option value="">-- Select Country --</option>
                    </select>
                    <span asp-validation-for="StateModel.IdCountry" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
